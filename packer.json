{  
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:14.04",
      "commit": true,
      "pull": false
    }
  ],
  "provisioners": [
    {
      "type":"file",
      "source":"requirements.txt",
      "destination":"/tmp/requirements.txt"
    },
    {
        "type": "shell",
        "inline": "pip install -r /tmp/requirements.txt"
    },
    {
        "type": "shell",
        "script": "install.sh"
    }
  ],
  "post-processors": [
      {
        "type": "docker-tag",
        "only": ["docker"],
        "repository": "python3-base",
        "tag": "latest",
        "force": true
      }
  ]
}
